{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude-Dash Skill Manifest",
  "description": "Schema for skill manifest files",
  "type": "object",
  "required": ["name", "version", "description", "triggers"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Skill name in kebab-case"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Brief description of the skill"
    },
    "triggers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Keywords that activate this skill"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Other skills this skill depends on"
    },
    "author": {
      "type": "string",
      "description": "Skill author name or GitHub username"
    },
    "repository": {
      "type": "string",
      "format": "uri",
      "description": "GitHub repository URL"
    },
    "license": {
      "type": "string",
      "default": "MIT",
      "description": "License identifier"
    },
    "manifest_version": {
      "type": "string",
      "default": "1.0",
      "description": "Version of manifest schema"
    },
    "category": {
      "type": "string",
      "enum": ["development", "learning", "system", "marketing", "workflow", "custom"],
      "description": "Skill category"
    },
    "priority": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 50,
      "description": "Priority when multiple skills match (higher = more important)"
    },
    "exclusive": {
      "type": "boolean",
      "default": false,
      "description": "If true, only this skill activates when triggered"
    },
    "min_claude_dash_version": {
      "type": "string",
      "description": "Minimum claude-dash version required"
    },
    "project_types": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Only activate for these project types (e.g., ['react-native', 'nextjs'])"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "additionalProperties": false
}
